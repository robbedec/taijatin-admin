<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="800.0" prefWidth="400.0" type="FlowPane" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="userTable" prefHeight="400.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="usernameCol" minWidth="125.0" prefWidth="75.0" text="Gebruikersnaam" />
          <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="gradeCol" prefWidth="75.0" text="Graad" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab closable="false" text="Leden">
               <content>
                  <FlowPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="800.0" prefWidth="400.0" vgap="10.0">
                     <children>
                        <TextField fx:id="txtFilter" onKeyTyped="#filter" prefHeight="25.0" prefWidth="242.0" promptText="naam" />
                        <ComboBox fx:id="cboType" prefWidth="150.0" promptText="Filter op soort">
                           <FlowPane.margin>
                              <Insets left="5.0" />
                           </FlowPane.margin>
                        </ComboBox>
                        <ListView fx:id="listViewMembers" prefHeight="300.0" prefWidth="400.0" />
                        <Button fx:id="btnNew" mnemonicParsing="false" onAction="#newUser" prefHeight="31.0" prefWidth="175.0" text="Nieuwe gebruiker" textAlignment="CENTER">
                           <FlowPane.margin>
                              <Insets left="14.0" />
                           </FlowPane.margin>
                        </Button>
                        <Button fx:id="btnDelete" alignment="CENTER" mnemonicParsing="false" onAction="#deleteUser" prefHeight="31.0" prefWidth="175.0" text="Verwijder" textFill="#eb1212">
                           <FlowPane.margin>
                              <Insets left="20.0" />
                           </FlowPane.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </FlowPane>
               </content>
          </Tab>
          <Tab closable="false" text="Overzichten">
               <content>
                  <FlowPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <ComboBox fx:id="cboOverzicht" prefWidth="150.0" />
                     </children>
                  </FlowPane>
               </content>
          </Tab>
            <Tab text="Activiteiten">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Lesmateriaal">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
   <padding>
      <Insets top="10.0" />
   </padding>
</fx:root>
