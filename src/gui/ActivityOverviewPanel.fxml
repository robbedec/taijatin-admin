<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="800.0" prefWidth="400.0" type="FlowPane" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextField fx:id="txtFilter" onKeyTyped="#filter" prefHeight="25.0" prefWidth="242.0" promptText="naam" />
        <ComboBox fx:id="cboType" prefWidth="150.0" promptText="Filter op soort">
            <FlowPane.margin>
                <Insets left="5.0" />
            </FlowPane.margin>
        </ComboBox>
        <TableView fx:id="activityTable" prefHeight="400.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="nameCol" minWidth="175.0" prefWidth="75.0" text="Naam van activiteit" />
                <TableColumn fx:id="typeCol" prefWidth="100.0" text="Type" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Button fx:id="btnNew" mnemonicParsing="false" onAction="#newActivity" prefHeight="31.0" prefWidth="175.0" text="Nieuwe activiteit" textAlignment="CENTER">
            <FlowPane.margin>
                <Insets left="14.0" />
            </FlowPane.margin>
        </Button>
        <Button fx:id="btnDelete" alignment="CENTER" mnemonicParsing="false" onAction="#deleteActivity" prefHeight="31.0" prefWidth="175.0" text="Verwijder" textFill="#eb1212">
            <FlowPane.margin>
                <Insets left="20.0" />
            </FlowPane.margin>
        </Button>
    </children>
    <padding>
        <Insets top="10.0" />
    </padding>
</fx:root>
